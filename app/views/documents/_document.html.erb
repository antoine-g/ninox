<tr>
  <td>
    <%= link_to document.title, document %>
  </td>
  <td>
    <%= document.desc %>
  </td>
  <td>
    <% if document.course %>
    <%= link_to document.course.code, course_path(document.course) %>
    <% end %>
  </td>
  <td>
    <% if document.user %>
    <%= link_to document.user.email, user_path(document.user) %>
    <% end %>
  </td>
  <td>
    <%= document.unique_views %>
  </td>
</tr>