<h1><%= @document.title %></h1>
<dl class="dl-horizontal">
  <dt>Title</dt>
  <dd><%= @document.title %></dd>
  <dt>Description</dt>
  <dd><%= @document.desc %></dd>
<% if @document.course %>
  <dt>Associated to course</dt>
  <dd><%= link_to @document.course.code, @document.course %></dd>
<% else %>
  <dt>Not associated to any course</dt>
<% end %>
<% if @document.user %>
  <dt>Owner</dt>
  <dd><%= link_to @document.user.email, @document.user %></dd>
<% else %>
  <dt>Not associated to any user</dt>
<% end %>
</dl>