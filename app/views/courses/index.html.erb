<h1>All courses</h1>

<%= paginate @courses %>

<table class="courses table table-striped">
  <tr>
    <th>Code</th><th>Name</th>
  </tr>
  <%= render @courses %>
</table>
<% if user_signed_in? %>
  <%= link_to "Add a new course", new_course_path, class: "btn btn-primary" %>
<% else %>
  <p>Please <%= link_to "sign in", new_user_session_path %> to add a new course.</p>
<% end %>

